<div align="center"><%= image_tag "starfield.jpg", class: "background" %></div>
<section id='edit-profile-form' class="container form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: {action: "update"} do |f| %>
        <fieldset>
          <h1 class="text-center">Edit Profile</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="name">Name</label>
            <div class="col-md-8">
              <%= f.text_field :name, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email</label>
            <div class="col-md-8">
              <%= f.text_field :email, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Save", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>
    </div>
  </div>
</section>
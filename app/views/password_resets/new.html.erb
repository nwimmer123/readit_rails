<div class="page">
  <div class="container">
  <br>
    <p>Please enter your email address where you would like to receive the reset link.</p>
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "inputBox" %>
      </div>
      <br>
      <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>
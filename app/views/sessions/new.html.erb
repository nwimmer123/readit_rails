<div class="page">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: login_path, method: "post" do |f| %>
        <fieldset>
          <h1 class="text-center">Login:</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email Address</label>
            <div class="col-md-8">
              <%= f.text_field :email, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-8">
              <%= f.password_field :password, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Login", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

      <p><%= link_to "forgotten password?", new_password_reset_path, class: "btn btn-warning" %></p>
    </div>
  </div>
</div>
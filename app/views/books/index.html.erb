<body class="homepage">
    <div class="top container">
      <h1>Welcome to Read It!</h1>
      <h2>Book reviews and discussion</h2>
    </div>

<% if current_user %> 
<!-- Add book button -->

  <div class="container clearfix">
    <button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal" id="addBook">Add Book</button>
  </div>
<% end %>

  <!--Book List Display -->
  <div class="lowerPage">
    <ul class="list-group" id="books-list">
      
      <% @books.each do |book| %>
        <li class="list-group-item book" >
          <img src=<%= book.image %>alt="Book Jacket" class="homepageImages">
          
          <p><b>Title: </b><%= book.title %></p>
          <p><b>Author: </b><%= book.author %></p>
          <p><b>Genre: </b><%= book.genre %></p>
        </li>

      <% end %>
    
    </ul>   
  </div>  
</body>    

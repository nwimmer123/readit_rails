<div class="form page">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @book, url: {action: "update"} do |f| %>
        <fieldset>
          <h1 class="text-center">Add A Book</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="name">Title</label>
            <div class="col-md-8">
              <%= f.text_field :title, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="author">Author</label>
            <div class="col-md-8">
              <%= f.text_field :author, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="image">Image Url</label>
            <div class="col-md-8">
              <%= f.text_field :image, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="publication_date">Publication Date</label>
            <div class="col-md-8">
              <%= f.text_field :publication_date, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="publisher">Publisher</label>
            <div class="col-md-8">
              <%= f.text_field :publisher, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="synopsis">Synopsis</label>
            <div class="col-md-8">
              <%= f.text_area :synopsis, rows: 10, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="genre">Genre</label>
            <div class="col-md-8">
              <%= f.select :genre, [["Sci-fi", "Sci-fi"], ["Fantasy", "Fantasy"], ["Comic", "Comic"], ["Manga", "Manga"], ["Fiction", "Fiction"], ["Non-Fiction", "Non-Fiction"]], class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-6 control-label" for="current">Are you currently reading this?</label>
              <%= f.check_box :current, {}, 1, 0 %>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Update Book", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
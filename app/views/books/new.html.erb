<div class="page">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :book, url: books_path do |f| %>
        <fieldset>
          <h1 class="text-center">Add A Book</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="name">Title</label>
            <div class="col-md-8">
              <%= f.text_field :title, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="genre">Genre</label>
            <div class="col-md-8">
              <%= f.select :genre, [["Sci-fi", "Sci-fi"], ["Fantasy", "Fantasy"], ["Comic", "Comic"], ["Manga", "Manga"], ["Fiction", "Fiction"], ["Non-Fiction", "Non-Fiction"]], class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Create Book", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>
      
      <%= @book_data %> 
      
      <ul class="list-group" id="books-list">
        <% if @book_data%>
          <% @book_data.each do |data| %>
            <%= data %>
              <li class="list-group-item book" >
                <% the_book = book_data["items"][data]["volumeInfo"]  %>
                <img alt="Book Jacket" class="homepageImages" src=<%= the_book["imageLinks"]["thumbnail"] %> >
                <p><b>Title: </b><%= the_book["title"] %></p>
                <% authors = the_book["authors"] %>
                <p><b>Author: </b><%= authors.join(", ") %></p>
                <p><b>Publisher: </b> <%= the_book["publisher"] %></p>
                <p><b>Date Published: </b> <%= the_book["publishedDate"] %></p>
                <p><b>Synopsis: </b><%= the_book["description"] %></p>
            </li>
          <% end %> 
        <% end %>
      </ul>

    </div>
  </div>
</div>

